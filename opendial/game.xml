<domain>
	
<initialstate>
    
    <variable id="u_m">
	    <value prob="1">Would you like to play a guessing game? I'll give you a fun fact about
	    one of the states in the USA and you can guess which state it is! You can ask for up to 
	    three extra hints before you lose.</value>
    </variable>
    
    <variable id="state">
	    <value prob="1">0</value>
    </variable>
    
    <!-- variables to track recognition error rate --> 
    <variable id="recogErrorCount">
	    <value prob="1">0</value>
    </variable>
    <variable id="u_uCount">
	    <value prob="1">0</value>
    </variable>

    <variable id="current_step">
		<value>begin</value>
    </variable>
    
</initialstate>

	<!-- U_U triggered model -->
	<import href="u_u.xml"/>

	<!-- A_U triggered model -->
	<import href="a_u.xml"/>

	<!-- A_M triggered model -->
	<import href="a_m.xml"/>
	
	<!-- A_M triggered model -->
	<import href="current_state.xml"/>
	
</domain>